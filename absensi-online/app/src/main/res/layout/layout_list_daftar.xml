<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:text="Budi Santoso"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


    <TextView
        android:id="@+id/textViewKet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:text="Keterangan"
        android:textColor="#498C1A"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTgl"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNama"
        android:layout_alignStart="@+id/textViewNama"
        android:layout_alignEnd="@+id/textViewNama"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:text="Tanggal" />

    <TextView
        android:id="@+id/textViewMapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewNama"
        android:layout_alignTop="@+id/textViewKet"
        android:layout_alignEnd="@+id/textViewKet"
        android:layout_alignBottom="@+id/textViewKet"
        android:layout_marginStart="234dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="5dp"
        android:text="Mapel" />

</RelativeLayout>