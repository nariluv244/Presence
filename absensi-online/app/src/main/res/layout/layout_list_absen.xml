<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="8"
        android:text="Budi Santoso"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


    <TextView
        android:textStyle="bold"
        android:id="@+id/textViewUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewDelete"
        android:layout_toLeftOf="@+id/textViewDelete"
        android:layout_toStartOf="@+id/textViewDelete"
        android:padding="5dp"
        android:text="Update"
        android:textColor="#498C1A" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/textViewDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="Delete"
        android:textColor="#C20A10" />

    <TextView
        android:id="@+id/textViewTgl"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNama"
        android:layout_alignStart="@+id/textViewNama"
        android:layout_alignEnd="@+id/textViewNama"
        android:layout_marginStart="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="3dp"
        android:text="Tanggal" />

    <TextView
        android:id="@+id/textViewKet"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewNama"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="26dp"
        android:layout_toStartOf="@+id/textViewUpdate"
        android:layout_weight="8"
        android:textStyle="bold"
        android:text="Keterangan" />

</RelativeLayout>